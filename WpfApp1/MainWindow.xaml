<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="8,0,0,10">
            <TextBlock Text="Додати / редагувати студента" FontWeight="Bold" FontSize="14" Margin="5"/>
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ПІБ:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="Рік народження:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="YearTextBox" Grid.Row="0" Grid.Column="3" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Школа:" VerticalAlignment="Center" Margin="5"/>
                <TextBox x:Name="SchoolTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>
            </Grid>
            <Button x:Name="AddButton" Content="Додати студента" Margin="5" Click="AddButton_Click"/>
        </StackPanel>

        <DataGrid x:Name="StudentsDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ПІБ" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Рік" Binding="{Binding Year}" Width="Auto"/>
                <DataGridTextColumn Header="Школа" Binding="{Binding School}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <TextBlock Text="Фільтрувати за школою:" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="FilterSchoolTextBox" Width="150" Margin="5"/>
            <Button x:Name="FilterButton" Content="Фільтр" Margin="5" Click="FilterButton_Click"/>
            <Button x:Name="DeleteButton" Content="Видалити" Margin="5" Click="DeleteButton_Click"/>
            <Button x:Name="SortByYearButton" Content="Сортувати за роком" Margin="5" Click="SortByYearButton_Click"/>
            <Button x:Name="LoadButton" Content="Завантажити" Margin="5" Click="LoadButton_Click"/>
            <Button x:Name="SaveButton" Content="Зберегти" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,5" Width="786" Background="#2E3348">
            <TextBlock Text="Пошук" VerticalAlignment="Center" Margin="5" Foreground="White" />
            <TextBox x:Name="SearchTextBox" Width="115" Margin="5" Padding="2"/>
            <Button x:Name="SearchButton" Content="Пошук" Margin="5" Click="SearchButton_Click" Background="WhiteSmoke" Width="46"/>
            <Button x:Name="UniqueYearButton" Content="Унікальні роки" Margin="5" Click="UniqueYearButton_Click" Background="WhiteSmoke" Width="104"/>
            <Button x:Name="OldestStudentButton" Content="Найстарший студент" Margin="5" Click="OldestStudentButton_Click" Background="WhiteSmoke" Width="122"/>
            <Button x:Name="AverageYearButton" Content="Середній рік народження" Margin="5" Click="AverageYearButton_Click" Background="WhiteSmoke" Width="154"/>
            <Button x:Name="GroupBySchoolButton" Content="Групування за школою" Margin="5" Click="GroupBySchoolButton_Click" Background="WhiteSmoke" Width="138"/>
        </StackPanel>
    </Grid>
</Window>
